<h1>Tags#index</h1>
<p>Find me in app/views/tags/index.html.erb</p>
<h2>Add a tag:</h2>
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
<%= form_with model: @tag, url: tags_path do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <% @tag.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <%= form.submit %>
  </div>
<% end %>
<%= @status %>
<ul>
  <% @tags&.each do |tag| %>
    <li>
      <%= link_to tag.name, tag %>
    </li>
  <% end %>
</ul>
